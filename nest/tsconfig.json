{
  "compilerOptions": {
    "types": ["node"],
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "lib": ["ES2015", "ES6"],
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "noImplicitAny": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@config/*": ["./src/config/*"],
      "@common/*": ["./src/common/*"],
      "@authentication/*": ["./src/authentication/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@lib/*": ["./src/lib/*"],
      "@models/*": ["./src/models/*"],
      "@modules/*": ["./src/modules/*"],
      "@services/*": ["./src/services/*"],
      "@test/*": ["./test/*"],
      "@guard/*": ["./src/guard/*"],
      "@typing/*": ["./typing/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    ".eslintrc.js"
  ]
}
